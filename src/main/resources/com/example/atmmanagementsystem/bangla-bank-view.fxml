<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600" spacing="12.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.atmmanagementsystem.BanglaBankController">
  <padding>
    <Insets top="16" right="16" bottom="16" left="16"/>
  </padding>

  <Label text="Create New Account" style="-fx-font-size:16px; -fx-font-weight:bold;"/>

  <GridPane hgap="8" vgap="8">
    <columnConstraints>
      <ColumnConstraints minWidth="120" />
      <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <Label text="Full name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" promptText="Samiul Hasan" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Phone number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" promptText="01788058690" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Initial deposit:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="depositField" promptText="150.00" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Button text="Create Account" onAction="#onCreateAccount" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
  </GridPane>

  <Label text="Result / Stored Accounts:" style="-fx-font-weight:bold;"/>
  <TextArea fx:id="outputArea" editable="false" wrapText="true" prefRowCount="20" />
</VBox>
