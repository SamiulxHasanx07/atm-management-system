<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.atmmanagementsystem.AtmController" stylesheets="@atm.css" styleClass="main-container">
  <children>
    <VBox alignment="CENTER" spacing="20.0">
      <children>
        <VBox alignment="TOP_CENTER" spacing="0" styleClass="atm-shell" maxWidth="500">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30" />
            </padding>

            <!-- Header -->
            <Label text="SECURE BANK ATM" styleClass="atm-title" />
            
            <Region prefHeight="20" />

            <!-- Screen Section -->
            <HBox spacing="15" alignment="CENTER">
                <children>
                    <!-- Left Side Buttons -->
                    <VBox spacing="15" alignment="CENTER_LEFT" styleClass="side-buttons-container">
                        <Button text="" mnemonicParsing="false" styleClass="side-btn, side-btn-left" />
                        <Button text="" mnemonicParsing="false" styleClass="side-btn, side-btn-left" />
                        <Button text="" mnemonicParsing="false" styleClass="side-btn, side-btn-left" />
                        <Button text="" mnemonicParsing="false" styleClass="side-btn, side-btn-left" />
                    </VBox>

                    <!-- Screen -->
                    <StackPane styleClass="screen-frame">
                        <children>
                            <VBox alignment="CENTER_LEFT" spacing="10" styleClass="screen-inner">
                                <padding>
                                    <Insets top="20" right="20" bottom="20" left="20" />
                                </padding>
                                <Label text="WELCOME" styleClass="screen-welcome" />
                                <Label fx:id="screenMessage" text="Please enter your card number" wrapText="true" styleClass="screen-text" />
                                <TextField fx:id="screenInput" promptText="_" styleClass="screen-input" />
                            </VBox>
                        </children>
                    </StackPane>

                    <!-- Right Side Buttons -->
                    <VBox spacing="15" alignment="CENTER_RIGHT" styleClass="side-buttons-container">
                        <Button text="" mnemonicParsing="false" styleClass="side-btn, side-btn-right" />
                        <Button text="" mnemonicParsing="false" styleClass="side-btn, side-btn-right" />
                        <Button text="" mnemonicParsing="false" styleClass="side-btn, side-btn-right" />
                        <Button text="" mnemonicParsing="false" styleClass="side-btn, side-btn-right" />
                    </VBox>
                </children>
            </HBox>

            <Region prefHeight="30" />

            <!-- Card Reader Slot -->
            <HBox alignment="CENTER_LEFT" styleClass="slot-container" spacing="15">
                <Label text="ðŸ’³" styleClass="slot-icon" />
                <Label text="CARD READER" styleClass="slot-label" />
            </HBox>

            <Region prefHeight="20" />

            <!-- Keypad Section -->
            <GridPane hgap="10" vgap="10" alignment="CENTER" styleClass="keypad-container">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="33" />
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="33" />
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="33" />
                </columnConstraints>

                <Button text="1" onAction="#onNum" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="num-btn" maxWidth="Infinity" />
                <Button text="2" onAction="#onNum" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="num-btn" maxWidth="Infinity" />
                <Button text="3" onAction="#onNum" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="num-btn" maxWidth="Infinity" />

                <Button text="4" onAction="#onNum" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="num-btn" maxWidth="Infinity" />
                <Button text="5" onAction="#onNum" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="num-btn" maxWidth="Infinity" />
                <Button text="6" onAction="#onNum" GridPane.rowIndex="1" GridPane.columnIndex="2" styleClass="num-btn" maxWidth="Infinity" />

                <Button text="7" onAction="#onNum" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="num-btn" maxWidth="Infinity" />
                <Button text="8" onAction="#onNum" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="num-btn" maxWidth="Infinity" />
                <Button text="9" onAction="#onNum" GridPane.rowIndex="2" GridPane.columnIndex="2" styleClass="num-btn" maxWidth="Infinity" />

                <Button text="CLR" onAction="#onClear" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="num-btn, action-btn" maxWidth="Infinity" />
                <Button text="0" onAction="#onNum" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="num-btn" maxWidth="Infinity" />
                <Button text="OK" onAction="#onOk" GridPane.rowIndex="3" GridPane.columnIndex="2" styleClass="num-btn, action-btn" maxWidth="Infinity" />
            </GridPane>

            <Region prefHeight="30" />

            <!-- Cash Dispenser Slot -->
            <HBox alignment="CENTER_LEFT" styleClass="slot-container" spacing="15">
                <Label text="ðŸ’µ" styleClass="slot-icon-green" />
                <Label text="CASH DISPENSER" styleClass="slot-label" />
            </HBox>
            
            <Region prefHeight="10" />

            <!-- Receipt Slot -->
            <HBox alignment="CENTER_LEFT" styleClass="slot-container" spacing="15">
                <Label text="ðŸ“„" styleClass="slot-icon" />
                <Label text="RECEIPT" styleClass="slot-label" />
            </HBox>

        </VBox>
      </children>
    </VBox>
  </children>
</StackPane>
